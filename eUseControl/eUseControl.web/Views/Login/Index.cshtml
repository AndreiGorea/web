@{ Layout = "~/Views/Shared/_Layout_login.cshtml";
     ViewBag.Title = "Login"; }


@using System.Web.Optimization
@model eUserControl.Web.Models.UserLogin

<section class="vh-100" style="background-color: #eee;">
     <div class="container h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
               <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                         <div class="card-body p-md-5">
                              <div class="row justify-content-center">
                                   <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Login</p>

                                        <div class="mx-1 mx-md-4">
                                             @Html.ValidationSummary(true)
                                             <br>
                                             @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "LoginForm" }))
                                             {
                              @Html.AntiForgeryToken()
                                                  <div class="d-flex flex-row align-items-center mb-4">
                                                       <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                                       <div class="form-outline flex-fill mb-0">
                                                            @Html.LabelFor(m => m.Credential, new { @class = "control-label" })
                                                            @Html.TextBoxFor(m => m.Credential, new
                                                            {
                                                                 placeholder = "andrei.gorea@gmail.com",
                                                                 title = "User Name",
                                                                 value = "",
                                                                 name = "username",
                                                                 id = "username",
                                                                 @class = "form-control"
                                                            })


                                                       </div>
                                                  </div>

                                                                      <div class="d-flex flex-row align-items-center mb-4">
                                                                           <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                                                           <div class="form-outline flex-fill mb-0">
                                                                                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                                                                @Html.TextBoxFor(m => m.Password, new
                                                                                {
                                                                                     placeholder = "********",
                                                                                     type = "password",
                                                                                     title = "Password",
                                                                                     value = "",
                                                                                     name = "password",
                                                                                     id = "password",
                                                                                     @class = "form-control"
                                                                                })


                                                                           </div>
                                                                      </div>

                                                                                          <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                                                                               <button class="btn btn-accent">Login</button>
                                                                                          </div>}


                                        </div>

                                   </div>
                                   <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                        <img src="https://i0.wp.com/agnetwest.com/wp-content/uploads/2017/02/Fresh-organic-produce-fruits-and-vegetables.jpg?fit=1000%2C1000&ssl=1" class="img-fluid" alt="Sample image">

                                   </div>
                              </div>
                         </div>
                    </div>
               </div>
          </div>
     </div>
</section>



     <script type="text/javascript">
          $(function () {

               $("#LoginForm").validate({
                    rules: {
                         Credential: {
                              required: true
                         },
                         Password: {
                              required: true
                         }
                    },
                    submitHandler: function (form) {
                         form.submit();
                    },
                    errorPlacement: function (error, element) {
                         $(element)
                              .closest("form")
                              .find("label[for='" + element.attr("id") + "']")
                              .append(error);
                    },
                    errorElement: "span"
               });
          });</script>
}
